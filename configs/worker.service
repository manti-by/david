[Unit]
Description=Background worker
After=network.target

[Service]
User=ubuntu
Group=ubuntu
Restart=always
WorkingDirectory=/home/ubuntu/david
EnvironmentFile=/home/ubuntu/david/.env
ExecStart=/home/ubuntu/david/.venv/bin/celery -a david.apps.core.celery worker -l WARNING
StandardOutput=file:/var/log/david/worker-access.log
StandardError=file:/var/log/david/worker-error.log
KillSignal=SIGINT
TimeoutStopSec=600

[Install]
WantedBy=multi-user.target
